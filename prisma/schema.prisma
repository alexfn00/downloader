// database
datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-js"
  recursive_type_depth = 5
  interface            = "sync"
}

// data models
model author {
  id     Int    @id @default(autoincrement())
  author String
  name   String
  avatar String
}

model video {
  id     Int    @id @default(autoincrement())
  author String
  name   String
  title  String
  href   String
}
